entrypoint = "index.js"
modules = ["nodejs-22"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_11"
packages = ["glib", "gtk3", "alsa-lib", "nss", "mesa", "xorg.libXScrnSaver", "xorg.libXrandr", "xorg.libXcursor", "xorg.libXi", "xorg.libXtst", "cups", "dbus", "expat", "libdrm", "xorg.libxcb", "libxkbcommon"]

[deployment]
run = ["node", "index.js"]
deploymentTarget = "autoscale"
ignorePorts = false

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "cypress-tests"

[[workflows.workflow]]
name = "cypress-tests"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm test"

[workflows.workflow.metadata]
outputType = "console"
